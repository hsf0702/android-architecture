<resources>

    <declare-styleable name="BarProgressBar">
        <!-- Whether to show the numerical progress value -->
        <attr name="showProgress" format="boolean"/>
        <!-- The progress color -->
        <attr name="progressColor" format="color"/>
        <!-- The progress bar background color-->
        <attr name="progressBgColor" format="color"/>
        <!-- Spacing between bars -->
        <attr name="spacing" format="dimension"/>
        <!-- The number of bars to show (multiples of 4 works best) -->
        <attr name="barCount" format="integer"/>
    </declare-styleable>
</resources>