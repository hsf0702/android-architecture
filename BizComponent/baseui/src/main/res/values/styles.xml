<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
          <!--windowIsTranslucent 解决黑色闪屏 -->
        <!--<item name="android:windowIsTranslucent">true</item>-->

        <!--overlapAnchor 把该属性改为false即可使menu位置位于toolbar之下-->
        <item name="overlapAnchor">false</item>
        <!--去除ToolBar标题栏左侧空白-->
        <item name="toolbarStyle">@style/QhToolbar</item>
    </style>
    <!--ToolBar去除左侧空白-->
    <style name="QhToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--AppBarLayout以及ToolBar去除阴影-->
    <style name="Widget.Design.AppBarLayout" parent="android:Widget">
        <item name="elevation">0dp</item>
        <item name="android:background">@color/highlight</item>
    </style>


    <style name="img_go">
        <item name="android:layout_width">@dimen/item_imggo_size</item>
        <item name="android:layout_height">@dimen/item_imggo_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@drawable/go</item>
    </style>

    <style name="split_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/linegray</item>
    </style>
</resources>